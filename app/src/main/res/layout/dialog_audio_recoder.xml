<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_transperent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center">
    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="300dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="184dp"
                android:layout_height="278dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F7FBFD">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:weightSum="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="bottom |center">
                            <androidx.cardview.widget.CardView
                                android:layout_width="94dp"
                                android:layout_height="94dp"
                                app:cardCornerRadius="100dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="@color/white">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center">
                                    <RadioButton
                                        android:id="@+id/rbtnImageRecoder"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:button="@android:color/transparent"
                                        android:background="@drawable/icon_micro_allstate"
                                        android:checked="false"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:orientation="vertical"
                        android:gravity="top |center">
                        <TextView
                            android:id="@+id/txtTimerRecorder"
                            android:layout_marginTop="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00:00"
                            android:fontFamily="@font/inter"
                            android:textSize="12sp"
                            android:textColor="#ADB0B2"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/mbtnStartRecoder"
                            android:layout_width="98dp"
                            android:layout_height="28dp"
                            app:cornerRadius="20dp"
                            android:stateListAnimator="@null"
                            android:backgroundTint="@color/Fresh_Guacamole_01"
                            android:text="START"
                            android:textSize="7sp"/>
                        <com.google.android.material.button.MaterialButton
                            android:visibility="gone"
                            android:id="@+id/mbtnNext"
                            android:layout_width="98dp"
                            android:layout_height="28dp"
                            app:cornerRadius="20dp"
                            android:stateListAnimator="@null"
                            android:backgroundTint="@color/Fresh_Guacamole_01"
                            android:text="NEXT"
                            android:textSize="7sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>