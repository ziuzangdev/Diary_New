<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Fresh_Guacamole_05"
    tools:context="sontungmtp.project.diary.View.Activity.MediaActivity"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_calandaractivity"
        android:orientation="horizontal"
        android:gravity="left |center">
        <ImageButton
            android:id="@+id/imgBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_back_black"
            android:layout_marginLeft="20dp"
            android:background="?selectableItemBackgroundBorderless"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_media_activity"
        android:orientation="horizontal"
        android:gravity="right |center">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvNext"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="53dp"
            android:layout_height="27dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            android:layout_gravity="center">
            <LinearLayout
                android:id="@+id/llNext"
                android:background="@color/Fresh_Guacamole_04"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:text="NEXT"
                    android:textColor="@color/white"
                    android:textSize="8sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="@dimen/toolbar_media_activity">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:gravity="center">
        <ImageButton
            android:id="@+id/imgUndo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/icon_undo_large"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:gravity="center">
        <ImageButton
            android:id="@+id/imgRedo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/icon_redo_large"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:gravity="center |top"
        android:orientation="vertical">
        <sontungmtp.project.diary.Model.Painting.DrawView
            android:id="@+id/vDrawView"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:background="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    app:cardElevation="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="20dp">
                    <LinearLayout
                        android:id="@+id/llSeekbar"
                        android:background="@color/Fresh_Guacamole_04"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="1">
                        <SeekBar
                            android:id="@+id/sbStrokeWidth"
                            android:min="10"
                            android:max="100"
                            android:progressTint="@color/white"
                            android:thumbTint="@color/white"
                            android:layout_weight="0.8"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/txtStrokeWidth"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:fontFamily="@font/ubuntu_bold"
                            android:gravity="center"
                            android:text="10"
                            android:textColor="@color/white"
                            android:textSize="20sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">
                    <RadioGroup
                        android:id="@+id/rtgGroupPaintTool"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/imgTest"
                            android:visibility="gone"
                            android:layout_width="0dp"
                            android:layout_height="0dp"/>
                        <RadioButton
                            android:id="@+id/rbtnPaintTool"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@android:color/transparent"
                            android:background="@drawable/state_icon_paint_square"
                            android:checked="true"/>
                        <RadioButton
                            android:id="@+id/rbtnEraser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@android:color/transparent"
                            android:background="@drawable/state_icon_eraser_square"
                            android:checked="false"/>
                    </RadioGroup>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvColorPicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:scrollbars="none"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>