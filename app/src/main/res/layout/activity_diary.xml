<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/Root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/Fresh_Guacamole_05"
        tools:context=".View.Activity.DiaryActivity">
        <!--    Toolbar 1-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_mainactivity"
            android:orientation="vertical"
            android:gravity="left |center">
            <ImageButton
                android:id="@+id/close"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_back_black"
                android:layout_marginLeft="10dp"
                android:background="?selectableItemBackgroundBorderless"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ToolSave"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_mainactivity"
            android:orientation="horizontal"
            android:gravity="right|center">
            <ImageButton
                android:id="@+id/imgTemplate"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_template_black"
                android:background="?selectableItemBackgroundBorderless"
                android:layout_marginRight="5dp"/>
            <ImageButton
                android:id="@+id/imgWatchMode"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_view_mode_black"
                android:background="?selectableItemBackgroundBorderless"
                android:layout_marginRight="5dp"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/cvSave"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="53dp"
                android:layout_height="27dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="3dp"
                android:layout_marginRight="20dp">
                <LinearLayout
                    android:id="@+id/llSave"
                    android:background="@color/Fresh_Guacamole_04"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_bold"
                        android:textSize="7dp"
                        android:textColor="@color/white"
                        android:text="SAVE"
                        android:gravity="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_mainactivity"
            android:orientation="horizontal"
            android:gravity="right|center">
            <ImageButton
                android:id="@+id/editMode"
                android:layout_width="40dp"
                android:visibility="gone"
                android:layout_height="40dp"
                android:src="@drawable/baseline_edit_note_24"
                android:layout_marginRight="20dp"
                android:background="?selectableItemBackgroundBorderless"/>
        </LinearLayout>
        <!--    Toolbar 2-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_mainactivity"
            android:layout_marginTop="@dimen/toolbar_mainactivity">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left |top"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">

                <!--        Date Layout-->
                <include
                    android:id="@+id/dateLayout"
                    layout="@layout/layout_date"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right |top"
                android:orientation="vertical"
                android:layout_marginRight="20dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvStatus"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="?selectableItemBackgroundBorderless"
                    app:cardBackgroundColor="#0D000000"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="100dp">
                    <TextView
                        android:gravity="center"
                        android:text="ðŸ˜€"
                        android:id="@+id/txtEmojiStatus"
                        android:textSize="23sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </RelativeLayout>
        <!--    Text Editor-->
        <LinearLayout
            android:id="@+id/llRichEditor1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="65dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/txtTittle"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/inter"
                android:textColor="@color/black"
                android:hint="Tittle"/>
            <com.project.diary.Model.RichEditor.RichEditor
                android:id="@+id/mEditor"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:overScrollMode="never"
                android:background="#00000000"/>

            <!--        TAGS-->

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ToolTextTool"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center |bottom">

            <!--        Main tool-->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:overScrollMode="never"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        app:cardElevation="0dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="left | center">
                            <ImageButton
                                android:id="@+id/imgbtnBrush"
                                android:layout_weight="1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/icon_brush_black"
                                android:layout_marginRight="5dp"
                                android:layout_marginLeft="10dp"
                                android:background="?selectableItemBackgroundBorderless"/>
                            <ImageButton
                                android:id="@+id/imgbtnImage"
                                android:layout_weight="1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/icon_iamge_black"
                                android:layout_marginRight="5dp"
                                android:background="?selectableItemBackgroundBorderless"/>
                            <ImageButton
                                android:visibility="gone"
                                android:id="@+id/imgbtnSticker"
                                android:layout_weight="1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/icon_sticker_black"
                                android:layout_marginRight="5dp"
                                android:background="?selectableItemBackgroundBorderless"/>
                            <ImageButton
                                android:id="@+id/imgbtnEmoji"
                                android:layout_weight="1"
                                android:visibility="gone"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/icon_emoji_black"
                                android:layout_marginRight="5dp"
                                android:background="?selectableItemBackgroundBorderless"/>
                            <ImageButton
                                android:id="@+id/imgbtnBackground"
                                android:layout_weight="1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/icon_background_black"
                                android:layout_marginRight="5dp"
                                android:background="?selectableItemBackgroundBorderless"/>
                            <ImageButton
                                android:id="@+id/imgbtnBold"
                                android:layout_weight="1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/icon_bold"
                                android:layout_marginRight="5dp"
                                android:background="?selectableItemBackgroundBorderless"/>
                            <ImageButton
                                android:id="@+id/imgbtnItalic"
                                android:layout_weight="1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/icon_italic"
                                android:layout_marginRight="5dp"
                                android:background="?selectableItemBackgroundBorderless"/>
                            <ImageButton
                                android:id="@+id/imgbtnUnderline"
                                android:layout_weight="1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/icon_underline"
                                android:layout_marginRight="5dp"
                                android:background="?selectableItemBackgroundBorderless"/>
                            <ImageButton
                                android:id="@+id/imgbtnTextTool"
                                android:layout_weight="1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/icon_texttool_black"
                                android:layout_marginRight="5dp"
                                android:background="?selectableItemBackgroundBorderless"/>
                            <ImageButton
                                android:id="@+id/imgbtnList"
                                android:layout_weight="1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/icon_list_black"
                                android:layout_marginRight="5dp"
                                android:background="?selectableItemBackgroundBorderless"/>
                            <ImageButton
                                android:id="@+id/imgbtnListBullet"
                                android:layout_weight="1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/icon_bullet_list"
                                android:layout_marginRight="5dp"
                                android:background="?selectableItemBackgroundBorderless"/>

                            <ImageButton
                                android:id="@+id/imgbtnIndentLeft"
                                android:layout_weight="1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/icon_indent_left"
                                android:layout_marginRight="5dp"
                                android:background="?selectableItemBackgroundBorderless"/>
                            <ImageButton
                                android:id="@+id/imgbtnIndentRight"
                                android:layout_weight="1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/icon_indent_right"
                                android:layout_marginRight="5dp"
                                android:background="?selectableItemBackgroundBorderless"/>
                            <ImageButton
                                android:visibility="gone"
                                android:id="@+id/imgbtnTag"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_tag_black"
                                android:layout_marginRight="5dp"
                                android:background="?selectableItemBackgroundBorderless"/>
                            <ImageButton
                                android:visibility="gone"
                                android:id="@+id/imgbtnVoice"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_voice_black"
                                android:layout_marginRight="5dp"
                                android:background="?selectableItemBackgroundBorderless"/>
                         </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


            </HorizontalScrollView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center |bottom"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/cvTextTool"
                app:cardElevation="10dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Font"
                                android:textColor="@color/black"
                                android:fontFamily="@font/inter_bold"
                                android:textSize="15sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="right |center">
                            <ImageView
                                android:id="@+id/imgCompleteTextTool"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?selectableItemBackgroundBorderless"
                                android:src="@drawable/baseline_check_24"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="left |center">
                            <ImageView
                                android:id="@+id/imgCloseTextTool"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?selectableItemBackgroundBorderless"
                                android:src="@drawable/icon_close_stroke"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:weightSum="3">
                            <ImageButton
                                android:id="@+id/imgbtnAlignLeft"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/icon_align_text_left"
                                android:background="?selectableItemBackgroundBorderless"/>
                            <ImageButton
                                android:id="@+id/imgbtnAlignCenter"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/icon_align_text_center"
                                android:background="?selectableItemBackgroundBorderless"/>
                            <ImageButton
                                android:id="@+id/imgbtnAlignRight"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/icon_align_text_right"
                                android:background="?selectableItemBackgroundBorderless"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:weightSum="3">
                            <ImageButton
                                android:id="@+id/imgbtnH1"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/icon_h1"
                                android:background="?selectableItemBackgroundBorderless"/>
                            <ImageButton
                                android:id="@+id/imgbtnH2"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/icon_h2"
                                android:background="?selectableItemBackgroundBorderless"/>
                            <ImageButton
                                android:id="@+id/imgbtnH3"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/icon_h3"
                                android:background="?selectableItemBackgroundBorderless"/>
                        </LinearLayout>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvColorPicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:scrollbars="none"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center |bottom"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/cvBackgroundDiary"
                app:cardElevation="10dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Background"
                                android:textColor="@color/black"
                                android:fontFamily="@font/inter_bold"
                                android:textSize="15sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="right |center">
                            <ImageView
                                android:id="@+id/imgCompleteBackgroundTool"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?selectableItemBackgroundBorderless"
                                android:src="@drawable/baseline_check_24"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="left |center">
                            <ImageView
                                android:id="@+id/imgCloseBackgroundTool"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?selectableItemBackgroundBorderless"
                                android:src="@drawable/icon_close_stroke"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <com.ogaclejapan.smarttablayout.SmartTabLayout
                        android:id="@+id/viewpagertab"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        app:stl_indicatorAlwaysInCenter="false"
                        app:stl_indicatorWithoutPadding="false"
                        app:stl_indicatorInFront="false"
                        app:stl_indicatorInterpolation="smart"
                        app:stl_indicatorGravity="bottom"
                        app:stl_indicatorColor="#40C4FF"
                        app:stl_indicatorThickness="4dp"
                        app:stl_indicatorWidth="auto"
                        app:stl_indicatorCornerRadius="2dp"
                        app:stl_overlineColor="#4D000000"
                        app:stl_overlineThickness="0dp"
                        app:stl_underlineColor="#4D000000"
                        app:stl_underlineThickness="0dp"
                        app:stl_dividerColor="#4D000000"
                        app:stl_dividerThickness="0dp"
                        app:stl_defaultTabBackground="?attr/selectableItemBackground"
                        app:stl_defaultTabTextAllCaps="true"
                        app:stl_defaultTabTextColor="@drawable/state_tab"
                        app:stl_defaultTabTextSize="12sp"
                        app:stl_defaultTabTextHorizontalPadding="16dp"
                        app:stl_defaultTabTextMinWidth="0dp"
                        app:stl_distributeEvenly="false"
                        app:stl_clickable="true"
                        app:stl_titleOffset="24dp"
                        app:stl_drawDecorationAfterTab="false"
                        />
                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_below="@id/viewpagertab"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llLoadingScene"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/white">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:lottie_speed="1.2"
                app:lottie_fileName="99297-loading-files.json"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
