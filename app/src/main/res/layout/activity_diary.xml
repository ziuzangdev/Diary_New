<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Fresh_Guacamole_05"
    tools:context=".View.Activity.DiaryActivity">

<!--    Toolbar 1-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_mainactivity"
        android:orientation="vertical"
        android:gravity="left |center">
        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_close_stroke"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_mainactivity"
        android:orientation="horizontal"
        android:gravity="right|center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_template_black"
            android:layout_marginRight="20dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_view_mode_black"
            android:layout_marginRight="20dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cvSave"
            android:layout_width="33dp"
            android:layout_height="17dp"
            app:cardBackgroundColor="@color/Fresh_Guacamole_04"
            app:cardElevation="0dp"
            app:cardCornerRadius="3dp"
            android:layout_marginRight="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="7dp"
                    android:textColor="@color/white"
                    android:text="SAVE"
                    android:gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
<!--    Toolbar 2-->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_mainactivity"
    android:layout_marginTop="@dimen/toolbar_mainactivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left |top"
        android:orientation="vertical"
        android:layout_marginLeft="20dp">

<!--        Date Layout-->
        <include
            layout="@layout/layout_date"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right |top"
        android:orientation="vertical"
        android:layout_marginRight="20dp">
        <androidx.cardview.widget.CardView
            android:layout_width="26dp"
            android:layout_height="26dp"
            app:cardBackgroundColor="#0D000000"
            app:cardElevation="0dp"
            app:cardCornerRadius="100dp">
            <TextView
                android:gravity="center"
                android:id="@+id/txtEmojiStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>
<!--    Text Editor-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/txtTittle"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/inter"
            android:textColor="@color/black"
            android:hint="Tittle"/>
        <com.project.diary.Model.RichEditor.RichEditor
            android:id="@+id/mEditor"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"/>

<!--        TAGS-->

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center |bottom">

<!--        Main tool-->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:cardElevation="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="10dp">
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:overScrollMode="never"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageButton
                        android:id="@+id/imgbtnBackground"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_background_black"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:background="@null"/>
                    <ImageButton
                        android:id="@+id/imgbtnBold"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_bold"
                        android:layout_marginRight="15dp"
                        android:background="@null"/>
                    <ImageButton
                        android:id="@+id/imgbtnItalic"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_italic"
                        android:layout_marginRight="15dp"
                        android:background="@null"/>
                    <ImageButton
                        android:id="@+id/imgbtnUnderline"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_underline"
                        android:layout_marginRight="15dp"
                        android:background="@null"/>
                    <ImageButton
                        android:id="@+id/imgbtnImage"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_iamge_black"
                        android:layout_marginRight="15dp"
                        android:background="@null"/>
                    <ImageButton
                        android:id="@+id/imgbtnSticker"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_sticker_black"
                        android:layout_marginRight="15dp"
                        android:background="@null"/>
                    <ImageButton
                        android:id="@+id/imgbtnEmoji"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_emoji_black"
                        android:layout_marginRight="15dp"
                        android:background="@null"/>
                    <ImageButton
                        android:id="@+id/imgbtnTextTool"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_texttool_black"
                        android:layout_marginRight="15dp"
                        android:background="@null"/>
                    <ImageButton
                        android:id="@+id/imgbtnList"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_list_black"
                        android:layout_marginRight="15dp"
                        android:background="@null"/>
                    <ImageButton
                        android:id="@+id/imgbtnTag"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_tag_black"
                        android:layout_marginRight="15dp"
                        android:background="@null"/>
                    <ImageButton
                        android:id="@+id/imgbtnVoice"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_voice_black"
                        android:layout_marginRight="15dp"
                        android:background="@null"/>
                    <ImageButton
                        android:id="@+id/imgbtnBrush"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_brush_black"
                        android:layout_marginRight="15dp"
                        android:background="@null"/>
                </LinearLayout>
            </HorizontalScrollView>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center |bottom"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/cvTextTool"
            android:visibility="gone"
            app:cardElevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Font"
                            android:textColor="@color/black"
                            android:fontFamily="@font/inter_bold"
                            android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="right |center">
                        <ImageView
                            android:id="@+id/imgCompleteTextTool"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_check_24"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="left |center">
                        <ImageView
                            android:id="@+id/imgCloseTextTool"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_close_stroke"/>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="3">
                        <ImageButton
                            android:id="@+id/imgbtnAlignLeft"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_align_text_left"
                            android:background="@null"/>
                        <ImageButton
                            android:id="@+id/imgbtnAlignCenter"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_align_text_center"
                            android:background="@null"/>
                        <ImageButton
                            android:id="@+id/imgbtnAlignRight"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_align_text_right"
                            android:background="@null"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:weightSum="3">
                        <ImageButton
                            android:id="@+id/imgbtnH1"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_h1"
                            android:background="@null"/>
                        <ImageButton
                            android:id="@+id/imgbtnH2"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_h2"
                            android:background="@null"/>
                        <ImageButton
                            android:id="@+id/imgbtnH3"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_h3"
                            android:background="@null"/>
                    </LinearLayout>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvColorPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:scrollbars="none"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
<!--    Emoji-->
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.aghajari.emojiview.view.AXEmojiEditText
            android:id="@+id/edt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="enter your message ..." />
    </LinearLayout>
</RelativeLayout>