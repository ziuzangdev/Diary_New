<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Activity.CalandarActivity"
    android:background="@color/Fresh_Guacamole_05"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_calandaractivity"
        android:orientation="horizontal"
        android:gravity="left |center">
        <ImageButton
            android:id="@+id/imgBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_back_black"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:text="Export"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/mainFeature"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center |left"
                    android:text="Export"
                    android:textSize="20sp" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_margin="15dp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvFromDate"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="#1A000000"
                        android:layout_weight="0.5"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/txtFromDate"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="7-13-2022"
                                android:textSize="15sp"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:fontFamily="@font/inter_medium"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvToDate"
                        android:layout_marginLeft="10dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="#1A000000"
                        android:layout_weight="0.5"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/txtToDate"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="7-13-2022"
                                android:textSize="15sp"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:fontFamily="@font/inter_medium"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:id="@+id/llExportPdf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center |left"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Export to PDF"
                android:fontFamily="@font/inter_medium"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center |left"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Export your diaries at custom intervals into a PDF file"
                android:fontFamily="@font/inter_medium"
                android:textSize="12sp"/>
            <LinearLayout
                android:id="@+id/llProgessExportPdf"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:weightSum="1"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:id="@+id/txtStateProgessExportPdf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="Genarete file"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_medium"/>
                <com.iammert.tileprogressview.TiledProgressView
                    android:id="@+id/tiledProgressView"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.8"/>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.project.diary.Model.RichEditor.RichEditor
        android:id="@+id/mEditor"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:background="#00000000"/>
</RelativeLayout>
