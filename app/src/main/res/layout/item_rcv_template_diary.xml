<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:id="@+id/llTemplateDiary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:background="#EBF6FB">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:weightSum="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Don't know what to write?"
                        android:fontFamily="@font/source_serif_pro"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center |left"
                        android:text="Calm. Apply the diary template to complete your entry"
                        android:fontFamily="@font/source_serif_pro"
                        android:textColor="#8B9094"
                        android:textSize="10sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:orientation="vertical"
                    android:gravity="left |center">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/mbtnStartTemplateDiary"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="START"
                        android:backgroundTint="@color/Fresh_Guacamole_04"
                        app:cornerRadius="15dp"
                        android:textSize="8sp"
                        android:stateListAnimator="@null"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imageId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/template_diary_img"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>